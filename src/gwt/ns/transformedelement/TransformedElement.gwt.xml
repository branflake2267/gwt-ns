<module>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.core.Core'/>
  <inherits name='com.google.gwt.user.UserAgent'/>

  <!-- deferred binding logic supported by ie6, ie8, but only a subset
		of safari and gecko (1.9.1+).
		TODO: perhaps add logic to specifically detect proprietary browser
		support unless standard support is found (not really a rush)	-->
  <!-- default -->
  <replace-with class='gwt.ns.transformedelement.client.impl.TransformedElementImplDefault'>
    <when-type-is class='gwt.ns.transformedelement.client.TransformedElement'/>
  </replace-with>
  
  <!-- IE -->
  <replace-with class='gwt.ns.transformedelement.client.impl.TransformedElementImplIE8'>
    <when-type-is class='gwt.ns.transformedelement.client.TransformedElement' />
    <any>
		<when-property-is name='user.agent' value='ie6'/>
		<when-property-is name='user.agent' value='ie8'/>
	</any>
  </replace-with>
  
  <!-- latest firefox -->
  <replace-with class='gwt.ns.transformedelement.client.impl.TransformedElementImplGecko'>
    <when-type-is class='gwt.ns.transformedelement.client.TransformedElement' />
    <when-property-is name='user.agent' value='gecko1_8' />
  </replace-with>
  
  <!-- safari 4+ and chrome -->
  <replace-with class='gwt.ns.transformedelement.client.impl.TransformedElementImplWebkit'>
    <when-type-is class='gwt.ns.transformedelement.client.TransformedElement'/>
    <when-property-is name='user.agent' value='safari'/>
  </replace-with>

  <!-- Other module inherits          -->
  <inherits name="gwt.ns.transforms.Transforms" />
</module>
